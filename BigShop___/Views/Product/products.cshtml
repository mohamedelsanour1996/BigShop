
@model PagedList.IPagedList<BigShop___.Models.Product>
@using PagedList.Mvc;
@using Microsoft.AspNet.Identity
@{ Layout = "~/Views/Shared/_Layout1.cshtml";
    ViewBag.activecategories = "active";
}
<style>
    *{
        outline:none
    }
    .pagination > .active >a{
        cursor: pointer;
        background: #3fa543;
        color:#ffffff
    }

</style>

<div class="super_container">
    @* Product Details *@
    @{
        ViewBag.Title = "Products";
    }
    @Html.Partial("BlackSection")

    <div class="porducts-he75">
        <div class="container-other">
            <div class="row">
                <div class="col-lg-3 col-md-4 col-sm-12 col-xs-12">
                    <div class="catigores">
                        <div class="vc_row wpb_row vc_inner vc_row-fluid vc_custom_1537345397344">
                            <div class="wpb_column vc_column_container vc_col-sm-12">
                                <div class="vc_column-inner-nile ">
                                    <div class="wpb_wrapper">
                                        <div class="accordion-1 nile-accordion">
                                            <div class=" cardhead wow bounceInLeft ">
                                                <div class="card-header">
                                                    @*<a href="#">product categories</a>*@
                                                    @Html.ActionLink("product categories", "products", "product")


                                                </div>
                                            </div>
                                            @{

                                                int i = 0;
                                            }

                                            @foreach (var item in ViewBag.Categories)
                                            {
                                                i += 100;
                                                if (item.isAvailable)
                                                {
                                                    <div class="card wow bounceInLeft delay-@i ">
                                                        <div class="card-header">
                                                            @Html.ActionLink($"{item.CategoryName}", "products", new { currentFilter = item.CategoryName })
                                                        </div>
                                                    </div>}
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="slider-media-he75 wow bounceInUp">
                        <div id="myslid-1" class="carousel slide" data-ride="carousel">
                            <!-- Indicators -->
                            <ol class="carousel-indicators hidden-xs">
                                <li data-target="#myslid-1" data-slide-to="0" class="active"></li>
                                <li data-target="#myslid-1" data-slide-to="1"></li>
                                <li data-target="#myslid-1" data-slide-to="2"></li>

                            </ol>
                            <!-- Wrapper for slides -->
                            <div class="carousel-inner" role="listbox">
                                <div class="carousel-item  item active">
                                    <img class="d-block w-100" src="~/Content/images/footer-back.jpg" alt="First slide">
                                    <div class="carousel-caption">
                                        <h1 class=" animated zoomIn">food farm</h1>
                                        <h2>up to 50 % off</h2>
                                        <p class=" animated zoomIn">Lorem ipsum dolor sit ametium, consectetur adipiscing elit.</p>
                                        <a href="#">buy now</a>
                                    </div>
                                </div>
                                <div class="carousel-item item">
                                    <img class="d-block w-100" src="~/Content/images/footer-back.jpg" alt="Second slide">
                                    <div class="carousel-caption">
                                        <h1 class=" animated zoomIn">food farm</h1>
                                        <h2>up to 50 % off</h2>
                                        <p class=" animated zoomIn">Lorem ipsum dolor sit ametium, consectetur adipiscing elit.</p>
                                        <a href="#">buy now</a>
                                    </div>
                                </div>
                                <div class="carousel-item item">
                                    <img class="d-block w-100" src="~/Content/images/footer-back.jpg" alt="Third slide">
                                    <div class="carousel-caption">
                                        <h1 class=" animated zoomIn">food farm</h1>
                                        <h2>up to 50 % off</h2>
                                        <p class=" animated zoomIn">Lorem ipsum dolor sit ametium, consectetur adipiscing elit.</p>
                                        <a href="#">buy now</a>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="resent-product-he75 wow bounceInUp">

                        <div class="titleee">
                            <h1 class=" wow bounceInLeft delay-100">top rated products</h1>
                        </div>
                        @{ int x = 0; }
                        @foreach (var item in Model.OrderByDescending(p => p.ProductRate).Take(5).ToList())
                        {
                            { x += 100; }


                            <div class="itempro wow bounceInLeft delay-@x">
                                <div class="images">
                                    <img src="~/images/@item.ProductImageURL">
                                </div>
                                <div class="contented">
                                    <h1>@item.ProductName</h1>
                                    <div class="rstestare">
                                        <ul>
                                            @for (int y = 0; y < 5; y++)
                                            {
                                                if (item.ProductRate > y)
                                                {
                                                    <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                }
                                                else
                                                {
                                                    <li><i class="fa fa-star-o" aria-hidden="true"></i></li>

                                                }
                                            }


                                        </ul>
                                    </div>
                                    <div class="price">
                                        <span class="old-price"> <i class="fa fa-gbp" aria-hidden="true"></i>@item.ProductOldPrice</span>
                                        <span class="new-price"> <i class="fa fa-gbp" aria-hidden="true"></i>@item.ProductNewPrice</span>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
                <div class="col-lg-9 col-md-8 col-sm-12 col-xs-12">
                    <div class="media-carosel">
                        <div>



                            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="height:430px">
                                <ol class="carousel-indicators">
                                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                                </ol>
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <img class="d-block w-100" src="~/Content/images/category-img2.jpg" alt="First slide">
                                    </div>
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src="~/Content/images/category-img1.jpg" alt="Second slide">
                                    </div>
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src="~/Content/images/category-img1.jpg" alt="Third slide">
                                    </div>
                                </div>
                                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next btn " href="#carouselExampleIndicators" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon " aria-hidden="true"> </span>
                                    <span class="sr-only ">Next</span>
                                </a>
                            </div>
                        </div>
                    </div>
                    @{
                        var ProductsCategory = "All Products";
                        if (ViewBag.CurrentFilter != null)
                        {
                            ProductsCategory = ViewBag.CurrentFilter;
                        }


                    }
                    <div class="prodectitems-he75">
                        <div class="title-sear">
                            <h2 class="wow bounceInLeft">@ProductsCategory</h2>

                            <div class="search" style="z-index: 10;">
                                <div class="dropdown">
                                    <button class="btn btn-light dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Sort By
                                    </button>
                                    <div class="dropdown-menu " style="padding: 10px 15px;" aria-labelledby="dropdownMenuButton">
                                        <a class="dropdown-item" style="display:grid">
                                            @Html.ActionLink("Name", "products", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
                                        </a>
                                        <a class="dropdown-item" style="display:grid">
                                            @Html.ActionLink("Price", "products", new { sortOrder = ViewBag.DateSortParm, currentFilter = ViewBag.CurrentFilter })
                                        </a>
                                        <a class="dropdown-item" style="display:grid">
                                            @Html.ActionLink("ID", "products", new { sortOrder = ViewBag.DateSortParm, currentFilter = ViewBag.CurrentFilter })
                                        </a>
                                    </div>
                                </div>
                            </div>

                        </div>


                        <div class="row otherrow">


                            @foreach (var item in Model)
                            {
                                <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12 othercol">
                                    <div class="pro-cont wow bounceInUp">
                                        <div class="imagess">
                                            <img src="~/images/@item.ProductImageURL">
                                        </div>
                                        <div class="shop-favicon ">

                                            <form method="post" class="formcart" data-ajax="true" data-ajax-method="post" data-ajax-complete="completed">
                                                <input type="hidden" value="@User.Identity.GetUserId()" name="User_Id" />
                                                <input type="hidden" value="1" name="quantity" min="1" />
                                                <input type="hidden" value="@item.ProductID" name="productId" />
                                                <button class="icon-cart submit" id="@item.ProductID">
                                                    <i class="fa fa-shopping-cart"></i>
                                                </button>
                                            </form>

                                            <form method="post" class="formwishlist" data-ajax="true" data-ajax-method="post" data-ajax-complete="completed">
                                                <input type="hidden" value="@User.Identity.GetUserId()" name="User_Id" />
                                                <input type="hidden" value="1" name="quentity" />
                                                <input type="hidden" value="@item.ProductID" name="productId" />

                                                <button class="icon-fav submitwishlist" id="@item.ProductID">
                                                    <i class="fa fa-heart"></i>
                                                </button>
                                            </form>

                                        </div>
                                        <div class="conproit">
                                            <h1>@item.Category.CategoryName</h1>
                                            @Html.ActionLink(@item.ProductName, "productdetails", new { id = item.ProductID })
                                            <div class="rstestare">
                                                <ul>
                                                    @for (int y = 0; y < 5; y++)
                                                    {
                                                        if (item.ProductRate > y)
                                                        {
                                                            <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                        }
                                                        else
                                                        {
                                                            <li><i class="fa fa-star-o" aria-hidden="true"></i></li>

                                                        }
                                                    }


                                                </ul>
                                            </div>
                                            <div class="price">

                                                <span class="old-price"> <i class="fa fa-gbp" aria-hidden="true"></i>@item.ProductOldPrice</span>
                                                <span class="new-price"> <i class="fa fa-gbp" aria-hidden="true"></i>@item.ProductNewPrice</span>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }




                        </div>
                        <div class="next-page-he75 wow bounceInUp">
                            <ul>

                                @Html.PagedListPager(Model, page => Url.Action("products",
                             new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
                            </ul>


                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    @Html.Partial("Services")

</div>



@section scripts{
    <script>

        $(function () {

            $('.submit').on('click', function (evt) {
                var btn = $(this)
                var sr = $('form').serialize();
                var x = sr.split("User_Id")[0] + "User_Id" + sr.split("User_Id")[1].split("=")[0] + "=" + sr.split("User_Id")[1].split("=")[1] + "=" + sr.split("User_Id")[1].split("=")[2] + "=" + btn.attr("id");
                evt.preventDefault();
                $.post('/cartproducts/addtocart/', x, function (data) {
                    $.post('/Account/cartCounter/', function (data) { $('#spnCart').html(data); toastr.success("Product Added Successfully"); });

                });


            });
        });
        $(function () {

            $('.submitwishlist').on('click', function (evt) {
                var btn = $(this)
                var sr = $('form').serialize();
                var x = sr.split("User_Id")[0] + "User_Id" + sr.split("User_Id")[1].split("=")[0] + "=" + sr.split("User_Id")[1].split("=")[1] + "=" + sr.split("User_Id")[1].split("=")[2] + "=" + btn.attr("id");
                evt.preventDefault();
                $.post('/WishListProducts/Addtowishlist/', x, function (data) {
                    $.post('/Account/wishlistCounter/', function (data) {
                        $('#spnWish').html(data);
                        toastr.remove();
                        toastr.success("Product Added Successfully To you WishList");
                    });

                });
            });
        });

    </script>
}