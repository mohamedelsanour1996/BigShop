@using BigShop___.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Big Store-@ViewBag.Title</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Unicat project">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="~/Content/styles/bootstrap4/bootstrap.min.css">
    <link href="~/Content/plugins/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" type="text/css" href="~/Content/plugins/OwlCarousel2-2.2.1/owl.carousel.css">
    <link rel="stylesheet" type="text/css" href="~/Content/plugins/OwlCarousel2-2.2.1/owl.theme.default.css">
    <link rel="stylesheet" type="text/css" href="~/Content/plugins/OwlCarousel2-2.2.1/animate.css">
    <link rel="stylesheet" type="text/css" href="~/Content/styles/main_styles.css">
    <link rel="stylesheet" type="text/css" href="~/Content/styles/responsive.css">
    <link href="~/Content/styles/animate.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/styles/jquery.countdown.css" />
    <link href="https://fonts.googleapis.com/css?family=Cairo:300,400,700,900" rel="stylesheet">
</head>
<body>
    <!------------------------------------------------starte navebare------- navbar-fixed-top -------------------------------------------------->
    <!-------------------
    Start Login-register
    -------------------->
    <!------------------ Start skills -------->
    <div class="log-register" style="position:fixed">
        <div class="container">
            <div class="lr-content">
                <div class="log-register-content">
                    <div class="logo_container wow tada">
                        <a href="index.html">
                            <span class="the">the </span>
                            <div class="logo_text">Big Store<span></span></div>
                            <p class="somtitle">The best subermarket</p>
                        </a>
                    </div>


                    <div class="loginregister">
                        <h2 class="title wow bounceInUp delay-100"> Login to your account </h2>
                        <p class=" wow bounceInUp delay-200">Don't have an account? <span>@Html.ActionLink("SignUp For Free!", "Register")</span></p>
                        <div class="tabcontent-grids">
                            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken() <div class="form-group wow bounceInLeft delay-300">

                                    <label>
                                        Email<span>*</span>
                                        <small>
                                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                        </small>
                                    </label>
                                    @*<input class="form-control" type="email" placeholder="Enter your Email*" required>*@
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter your Email" })
                                    <i class="fa fa-envelope"></i>

                                </div>

                                <div class="form-group wow bounceInLeft delay-400">

                                    <label>
                                        password<span>*</span>
                                        <small>
                                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

                                        </small>
                                    </label>
                                    @*<input class="form-control" type="password" placeholder="Enter Your password" required>*@
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter Your password" })
                                    <i class="fa fa-eye-slash" aria-hidden="true"></i>

                                </div>
                                <div class="row">
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <div class="chiller_cb wow bounceInLeft delay-500">
                                            @Html.LabelFor(m => m.RememberMe, new { @class = " wow bounceInLeft delay-500", @for = "myCheckbox1" })
                                            @Html.CheckBoxFor(m => m.RememberMe, new { @id = "myCheckbox1" })

                                            <span></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                        <p class=" wow bounceInRight delay-500">
                                            <span>
                                                @Html.ActionLink("Forgot your password?", "ForgotPassword")
                                            </span>
                                        </p>

                                    </div>
                                </div>

                                <div class="form-group">
                                    <a class="btn btn-default wow bounceInUp delay-600">
                                        <input type="submit" value="LOGIN" class="btn btn-default wow" style="background: #c23945;width:100%;border:none;outline:none;box-shadow:none;color:white;font-weight:600;font-size:20px;cursor:pointer" />
                                    </a>
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!------------------ End skills -------->
    <!-------------------
    End Login-register
    -------------------->

    <script src="~/Content/js/jquery-3.2.1.min.js"></script>
    <script src="~/Content/styles/bootstrap4/popper.js"></script>
    <script src="~/Content/styles/bootstrap4/bootstrap.min.js"></script>
    <script src="~/Content/js/main.js"></script>
    <script src="~/Content/plugins/greensock/TweenMax.min.js"></script>
    <script src="~/Content/plugins/greensock/TimelineMax.min.js"></script>
    <script src="~/Content/plugins/scrollmagic/ScrollMagic.min.js"></script>
    <script src="~/Content/plugins/greensock/animation.gsap.min.js"></script>
    <script src="~/Content/plugins/greensock/ScrollToPlugin.min.js"></script>
    <script src="~/Content/plugins/OwlCarousel2-2.2.1/owl.carousel.js"></script>
    <script src="~/Content/plugins/easing/easing.js"></script>
    <script src="~/Content/plugins/parallax-js-master/parallax.min.js"></script>
    <script src="~/Content/js/custom.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
    <script src="~/Content/js/wow.min.js"></script>
    <script>new WOW().init();</script>
</body>
</html>